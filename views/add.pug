doctype html              
html.
    <head>
        <title>St.Luke - Add builder</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    </head>
    <body>
        <style type="text/css">
            html,
            body {
              height: 100%;
            }

            body {
              display: -ms-flexbox;
              display: flex;
              -ms-flex-align: center;
              align-items: center;
              padding-top: 40px;
              padding-bottom: 40px;
              background-color: #f5f5f5;
            }

            .form-signin {
              width: 100%;
              max-width: 330px;
              padding: 15px;
              margin: auto;
            }
            .form-signin .checkbox {
              font-weight: 400;
            }
            .form-signin .form-control {
              position: relative;
              box-sizing: border-box;
              height: auto;
              padding: 10px;
              font-size: 16px;
            }
            .form-signin .form-control:focus {
              z-index: 2;
            }
            .form-signin input {
              margin-bottom: 4px;
              border-bottom-right-radius: 0;
              border-bottom-left-radius: 0;
            }

        </style>

    <form class="form-signin" method="POST" action="/add">
      <h1 class="h3 mb-3 font-weight-normal" style="text-align: center; margin-bottom: 20px;">Add Builder</h1>
      
      <label class="sr-only">Name</label>
      <input type="text" name="name" class="form-control" placeholder="Full Names" autocomplete="off" style="background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
      
      <label class="sr-only">Contact</label>
      <input type="text"  name="contact" class="form-control" placeholder="Email/Phone" autocomplete="off" style="background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
      
      <label class="sr-only">Pledged</label>
      <input type="text" name="pledged" class="form-control" placeholder="Pledged" autocomplete="off" style="background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
      
      <label class="sr-only">Paid</label>
      <input type="text" name="paid" class="form-control" placeholder="Paid" autocomplete="off" style="background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">

      <!-- <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Remember me
        </label>
      </div> -->

      <button style="margin:4px;" class="btn btn-lg btn-primary btn-block" type="submit">Add</button>

      <p class="mt-5 mb-3 text-muted">Â©2019; Made with Love from <a href="http://simicode.github.io">SimiCode</a></p>

    </form>


    </body>

